{
  "name": "@sip-protocol/api",
  "version": "0.1.0",
  "description": "REST API service for SIP Protocol SDK - Optional wrapper for non-JS backends",
  "author": "SIP Protocol <hello@sip-protocol.org>",
  "homepage": "https://sip-protocol.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/sip-protocol/sip-protocol.git",
    "directory": "packages/api"
  },
  "bugs": {
    "url": "https://github.com/sip-protocol/sip-protocol/issues"
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts src/routes/index.ts --format cjs --dts",
    "lint": "eslint --ext .ts src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "@sentry/node": "^10.34.0",
    "@sip-protocol/sdk": "workspace:*",
    "@sip-protocol/types": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "lru-cache": "^11.2.4",
    "morgan": "^1.10.1",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/pino-http": "^6.1.0",
    "@types/supertest": "^6.0.3",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "sip",
    "privacy",
    "rest-api",
    "stealth-addresses",
    "commitments",
    "api"
  ],
  "license": "MIT"
}
