# SIP Protocol API Server Environment Variables
# Copy this file to .env and fill in your values

# ─────────────────────────────────────────────────────────────
# Server Configuration
# ─────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# ─────────────────────────────────────────────────────────────
# CORS Configuration
# ─────────────────────────────────────────────────────────────
# Comma-separated list of allowed origins
# WARNING: Never use '*' in production - specify explicit origins
# Example: CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Allow credentials (cookies, authorization headers)
CORS_CREDENTIALS=true

# Preflight cache duration in seconds (default: 24 hours)
CORS_MAX_AGE=86400

# ─────────────────────────────────────────────────────────────
# Authentication
# ─────────────────────────────────────────────────────────────
# Comma-separated list of valid API keys
# Generate secure keys with: openssl rand -hex 32
# Required in production, optional in development
API_KEYS=

# ─────────────────────────────────────────────────────────────
# Rate Limiting
# ─────────────────────────────────────────────────────────────
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Window duration in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# ─────────────────────────────────────────────────────────────
# Monitoring
# ─────────────────────────────────────────────────────────────
# Sentry DSN for error tracking (optional)
# Get from: https://sentry.io/settings/YOUR-ORG/projects/YOUR-PROJECT/keys/
SENTRY_DSN=

# Enable Prometheus metrics endpoint (/metrics)
METRICS_ENABLED=true

# ─────────────────────────────────────────────────────────────
# Logging
# ─────────────────────────────────────────────────────────────
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# ─────────────────────────────────────────────────────────────
# Graceful Shutdown
# ─────────────────────────────────────────────────────────────
# Timeout in milliseconds before forcing shutdown
SHUTDOWN_TIMEOUT_MS=30000
